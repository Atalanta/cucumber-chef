if [ ! -f /etc/chef/client.pem ]; then
  /etc/init.d/chef-client restart
  echo -n "Waiting on client.pem to appear..."
  i="0"
  until [ -f /etc/chef/client.pem ]; do
    i=$[$i+1]
    sleep 1
    echo -n "."
    if [ $i -gt 60 ]; then
      echo -n "restart-chef-client"
      /etc/init.d/chef-client restart
      i="0"
    fi
  done
  echo "done."
fi

